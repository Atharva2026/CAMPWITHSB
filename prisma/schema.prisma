generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Registration {
  id                 Int       @id @default(autoincrement())
  email_id           String    @db.VarChar(255)
  voice_name         String?   @db.VarChar(255)
  participant_name   String    @db.VarChar(255)
  whatsapp           String?   @db.VarChar(255)
  parent_temple      String?   @db.VarChar(255)
  counselor_name     String?   @db.VarChar(255)
  camp_name          String    @db.VarChar(255)
  first_meal_date    Int
  first_meal_type    String    @db.VarChar(255)
  last_meal_date     Int
  last_meal_type     String    @db.VarChar(255)
  dinner_type        String    @db.VarChar(255)
  accommodation      String    @db.VarChar(255)
  gender             String    @db.VarChar(255)
  participant_type   String?   @db.VarChar(255)
  age                Int?
  married_since_year Int?
  poc_name           String    @db.VarChar(255)
  poc_contact        String    @db.VarChar(255)
  payment_id         String?   @db.VarChar(255)
  deductionSource    String?   @db.VarChar(255)
  passcode           String?   @db.VarChar(255)
  created_at         DateTime  @default(now()) @db.Timestamptz(6)
  amount             Float     @db.Real
  entry_cost         Float?    @db.Real
  clerk_user_id      String?   @db.VarChar(255)
  payment_status     String?   @default("pending") @db.VarChar(50)
  updated_at         DateTime? @default(now()) @updatedAt @db.Timestamptz(6)
  payment_method     String?   @db.VarChar(50)
}
